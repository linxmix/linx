{{#if showBeatGrid}}
  {{d3-axis
    select=(svg-transition select.beat-grid)
    transform=(svg-translate 0 125)
    scale=beatViewScale
    orient="top"
    tickSize=125
    ticks=beatCount
  }}
{{/if}}

{{#if showBarGrid}}
  {{d3-axis
    select=(svg-transition select.bar-grid)
    transform=(svg-translate 0 125)
    scale=barViewScale
    orient="top"
    tickSize=125
    ticks=barCount
  }}
{{/if}}
