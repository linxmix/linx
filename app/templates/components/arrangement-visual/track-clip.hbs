{{!-- {{arrangement-visual/track-clip/axis
  select=select
  clip=clip
  pxPerBeat=pxPerBeat
}}
 --}}

{{arrangement-visual/track-clip/wave
  select=select.TrackClip-wave
  isD3Visible=displayWaveform
  waveColor=waveColor
  transform=(if displayOverflowWaveform startOffsetTransform)
  peaks=trackPeaks
  height=height
}}

{{#zip-entries
  select=select.ArrangementVisualTrackClip-markers
  transform=(if displayOverflowWaveform startOffsetTransform)
  items=clip.markers
  cssExpr='.ArrangementVisualTrackClipMarker'
  as |marker tag|}}
  {{arrangement-visual/marker
    select=tag
    height=height
    pxPerBeat=pxPerBeat
    transform=(svg-translate (multiply pxPerBeat (time-to-beat marker.time trackBpm)))
  }}
{{/zip-entries}}

{{yield}}