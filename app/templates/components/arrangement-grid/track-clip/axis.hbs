{{!-- TODO(REFACTOR): can these be combined? --}}
{{#if showBeatGrid}}
  {{#data-visual
    as |stg width height|
  }}
    {{d3-axis
      select=(svg-transition stg.svg.select.beat-grid)
      transform=(svg-translate 0 125)
      scale=beatViewScale
      orient="top"
      tickSize=125
      ticks=beatCount
    }}
  {{/data-visual}}
{{/if}}

{{#if showBarGrid}}
  {{#data-visual
    as |stg width height|
  }}
    {{d3-axis
      select=(svg-transition stg.svg.select.bar-grid)
      transform=(svg-translate 0 125)
      scale=barViewScale
      orient="top"
      tickSize=125
      ticks=barCount
    }}
  {{/data-visual}}
{{/if}}
