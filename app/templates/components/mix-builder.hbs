{{#mix-builder/container
  selectedTransition=attrs.selectedTransition
  selectTransition=(action attrs.selectTransition)
  as |container|
}}
  {{mix-builder/header
    mix=mix
  }}

  {{mix-builder/tracklist
    mix=mix
    selectedTransition=container.selectedTransition
    selectTransition=(action container.selectTransition)
    zoomToTrack=(action container.zoomToTrack)
    removeTrack=(action container.removeTrack)
  }}

  {{mix-builder/playback-controls
    mix=mix
    selectedTransition=container.selectedTransition
  }}

  {{!-- {{mix-builder/transition-controls
    isVisible=container.selectedTransition
    selectedClip=container.selectedClip
    selectedQuantization=container.selectedQuantization
    selectQuantization=(action container.selectQuantization)
    zoomToClip=(action container.zoomToClip)
  }} --}}

  {{mix-visual
    mix=mix
    selectedTransition=container.selectedTransition
    selectedClip=container.selectedClip
    selectTransition=(action container.selectTransition)
    selectClip=(action container.selectClip)
    quantizeBeat=(action container.quantizeBeat)
    seekToBeat=(action container.seekToBeat)
  }}

  {{!-- {{mix-builder/clip-controls
    isVisible=container.selectedTransition
    selectedClip=container.selectedClip
  }} --}}
{{/mix-builder/container}}
