{{#track-clip
  clip=clip
  isPlaying=clipEvent.isPlaying
  isFinished=clipEvent.isFinished
  seekBeat=clipEvent.clipSeekBeat
  syncBpm=clipEvent.bpm
  pxPerBeat=pxPerBeat
  as |clipComponent|
}}
  {{#each visibleMarkers as |marker|}}
    {{clip-marker
      marker=marker
      pxPerBeat=pxPerBeat
    }}
  {{/each}}
{{/track-clip}}

