<div class="content">
  {{#link-to modelLinkTo item.model}}
    {{position}} &middot; {{item.modelName}} &middot; {{item.model.title}}
  {{/link-to}}
  <div class='tiny inverted basic circular red ui icon button' {{action "remove" item}}>
    <i class='remove icon'></i>
  </div>
  <div class='tiny inverted basic circular green ui icon button' {{action "preview" item}}>
    <i class='play icon'></i>
  </div>
  <div class='tiny inverted basic circular yellow ui icon button' {{action "view" item}}>
    <i class='search icon'></i>
  </div>
</div>
