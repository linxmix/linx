<div class="content">
  {{#if showFromTrack}}
    {{#link-to 'track' fromTrack}}
      {{position}} &middot; {{fromTrack.title}} &middot; {{fromTrack.artist}}
    {{/link-to}}
  {{/if}}
  <div class='tiny inverted basic circular yellow ui icon button' {{action "view" item}}>
    <i class='search icon'></i>
  </div>
  <div class='tiny inverted basic circular green ui icon button' {{action "preview" item}}>
    <i class='play icon'></i>
  </div>
  <div class='tiny inverted basic circular red ui icon button' {{action "remove" item}}>
    <i class='remove icon'></i>
  </div>

  {{#if showToTrack}}
    <div>
      {{#link-to 'track' toTrack}}
        {{lastPosition}} &middot; {{toTrack.title}} &middot; {{toTrack.artist}}
      {{/link-to}}
    </div>
  {{/if}}
</div>
