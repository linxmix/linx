<div class="content">
  {{position}} &middot;

  {{#link-to "track" track }}
    <span style="color:{{trackColor}};">
      {{track.title}}
    </span>
  {{/link-to}}

  &nbsp; Key &middot; {{track.audioMeta.camelotKey}}&nbsp;{{track.audioMeta.keyName}}
  &nbsp; BPM &middot; {{track.audioMeta.bpm}}

  <div class="tiny inverted basic circular yellow ui icon button" {{action "viewTrack" item}}>
    <i class="search icon"></i>
  </div>
  <div class="tiny inverted basic circular green ui icon button" {{action "play" item}}>
    <i class="play icon"></i>
  </div>
  <div class="tiny inverted basic circular red ui icon button" {{action "remove" item}}>
    <i class="remove icon"></i>
  </div>
</div>

{{#unless isLastItem}}
  <div class="content">
    <div class="inverted basic teal ui icon button {{if isSelectedTransitionClip "basic disabled"}}" {{action "viewTransition" item.transition}}>
      <i class="linkify icon"></i>
      {{#unless isSelectedTransitionClip}}
        Edit Transition
      {{else}}
        Editing Transition
      {{/unless}}
    </div>
  </div>
{{/unless}}
