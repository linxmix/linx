<div class="content">
  {{position}} &middot;

  {{#link-to "track" track}}
    {{track.title}}
  {{/link-to}}

  <div class="tiny inverted basic circular yellow ui icon button" {{action "viewTrack" item}}>
    <i class="search icon"></i>
  </div>
  <div class="tiny inverted basic circular green ui icon button" {{action "play" item}}>
    <i class="play icon"></i>
  </div>
  <div class="tiny inverted basic circular red ui icon button" {{action "remove" item}}>
    <i class="remove icon"></i>
  </div>
</div>

{{#unless isLastItem}}
  <div class="content">
    <div class="inverted basic teal ui icon button" {{action "viewTransition" item}}>
      <i class="linkify icon"></i>
      View Transition
    </div>
  </div>
{{/unless}}
