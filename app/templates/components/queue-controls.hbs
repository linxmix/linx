{{play-buttons
  isPlaying=isPlaying
  isDisabled=notReady
  playpause="playpause"
  skipBack="skipBack"
  skipForth="skipForth"
}}

{{#simple-arrangement
  arrangement=arrangement
  metronome=metronome
  isReady=isReady
  pxPerBeat=pxPerBeat
  seekToBeat="seekToBeat"
}}
  {{#arrangement-visual/row size="mini"}}
    {{#each clipEvents as |clipEvent|}}
      {{arrangement-item
        clipEvent=clipEvent
        metronome=metronome
        pxPerBeat=pxPerBeat
      }}
    {{/each}}
  {{/arrangement-visual/row}}
{{/simple-arrangement}}
