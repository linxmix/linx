<div class="content">
  {{#if track}}
    {{#link-to "track" track}}
      {{track.title}}
    {{/link-to}}
    <div class="tiny inverted basic circular red ui icon button" {{action "removeTrack" track}}>
      <i class="remove icon"></i>
    </div>
    <div class="tiny inverted basic circular green ui icon button" {{action "addTrack" track}}>
      <i class="add icon"></i>
    </div>
    <div class="tiny inverted basic circular yellow ui icon button" {{action "playTrack" track}}>
      <i class="play icon"></i>
    </div>
  {{/if}}
</div>
