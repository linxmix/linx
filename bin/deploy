#!/bin/bash

url=$1
remote=$2
branch=$3
base=$4

mkdir -p deploy
cd deploy

git init && \
  git checkout -B $branch && \
  touch ".nojekyll" && \
  rm -rf * && \
  cp -r ../$base/* ./ && \
  git add . && \
  git commit -m \"deploy\" && \
  git remote set-url $remote $url && \
  git push $remote $branch --force

cd ..