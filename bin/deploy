#!/bin/bash

url=$1
remote=$2
branch=$3
base=$4

mkdir -p deploy
cd deploy

git init && \
  git checkout -B $branch && \
  touch ".nojekyll" && \
  rm -rf * && \
  cp -r ../$base/* ./ && \
  #sed -i -s 's/    <script src="\/-\/live-reload.js"><\/script>//' index.html && \
  git add . && \
  git commit -m "deploy" && \
  git remote add $remote $url || git remote set-url $remote $url && \
  git push $remote $branch --force

cd ..