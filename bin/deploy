#!/bin/bash

url=$1
remote=$2
branch=$3

mkdir -p deploy
cd deploy

git init && \
  git checkout $branch
  touch .nojekyll && \
  rm -rf * && \
  cp -r ../!(node_modules) ./ && \
  git add . && \
  git commit -m \"deploy\" && \
  git config --get remote.$url.url && \
  git push $remote $branch --force

cd ..